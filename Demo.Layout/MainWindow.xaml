<Window x:Class="Demo.Layout.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo.Layout"
        mc:Ignorable="d"
        Title="MainWindow" Height="1043" Width="2085" WindowState="Maximized">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="2"></Setter>
            <Setter Property="HorizontalAlignment" Value="Left"></Setter>
            <Setter Property="Padding" Value="3"></Setter>
            <Setter Property="Background" Value="Transparent"></Setter>
            <Setter Property="BorderThickness" Value="0"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="FontSize" Value="21"></Setter>
            <Setter Property="Margin" Value="40,8,3,3"></Setter>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="30"></Setter>
            <Setter Property="FontWeight" Value="Black"></Setter>
            <Setter Property="Margin" Value="10,50,1,5"></Setter>
        </Style>

        <Style TargetType="Label">
            <Setter Property="FontSize" Value="25"></Setter>
            <Setter Property="Margin" Value="10,1,1,5"></Setter>
        </Style>

    </Window.Resources>
    <DockPanel>
        <Grid DockPanel.Dock="Left" Background="#FF343A3F">
            <Grid.RowDefinitions>
                <RowDefinition Height="70"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Image Source="/uac_logo.png" Margin="10"></Image>
                <TextBlock  FontSize="15" Foreground="White" Text="UAC Intergrated System" VerticalAlignment="Top" Grid.ColumnSpan="2" Margin="80,30,20,1"/>
            </Grid>
            <Grid Grid.Row="1">
                <StackPanel Margin="5">
                    <Label FontSize="21" Foreground="White" FontWeight="Bold" Content="Registrar Module"></Label>
                    <Button Content="Admissions"></Button>
                    <Button Content="Student"></Button>
                    <Button Content="Section"></Button>
                    <Button Content="Grades Encoding"></Button>
                    <Button Content="Subject"></Button>
                    <Button Content="Reports"></Button>
                    <Button Content="Maintainance"></Button>
                    <Button Content="Announcements"></Button>
                    <Button Content="Survey"></Button>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="2">
                <StackPanel Margin="5">
                    <Label Content="Academics Module" Foreground="White" FontWeight="Bold" FontSize="21"></Label>
                    <Button Content="Admissions"></Button>
                    <Button Content="Enlistment"></Button>
                    <Button Content="Query"></Button>
                    <Button Content="Utilities"></Button>
                </StackPanel>
            </Grid>
        </Grid>
        <Grid DockPanel.Dock="Top" Height="40" Background="#FFFFC107">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="40"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Label VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="1" FontSize="20" Margin="1,1,20,1" Content="Erl Nievera"></Label>

            <Image  Margin="8" Source="/menu-burger.png"></Image>
            <Image Margin="8" Grid.Column="2" Source="/settings.png"></Image>
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition MaxWidth="500"></ColumnDefinition>
                <ColumnDefinition MaxWidth="500"></ColumnDefinition>
                <ColumnDefinition MaxWidth="500"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <Label Margin="36,-4,0,0" Content="Statistic 2026-20207" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold" RenderTransformOrigin="0.271,0.446"></Label>
            <Image  Margin="8" VerticalAlignment="Center" HorizontalAlignment="Left" Source="/trend.png"></Image>

            <Label Grid.Column="1" Content="Last 3 Days Application" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="36,-4,0,0" FontWeight="Bold" RenderTransformOrigin="0.123,0.5"></Label>
            <Image Source="/CalendarIcon.png" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="8"></Image>

            <Label Grid.Column="2" Content="For Your Interview" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="36,-4,0,0" FontWeight="Bold" RenderTransformOrigin="0.254,0.446"></Label>
            <Image Source="/PeopleIcon.png" Grid.Column="2" Margin="8" VerticalAlignment="Center" HorizontalAlignment="Left" ></Image>

            <Border Name="mask7" Background="#FFFFFF" Grid.Row="1" CornerRadius="6,6,6,6" Opacity="1"></Border>
            <StackPanel Margin="5" Background="#FAF9F6" Grid.Row="1">
                <StackPanel.OpacityMask>
                    <VisualBrush Visual="{Binding ElementName=mask7}"></VisualBrush>
                </StackPanel.OpacityMask>
                <StackPanel.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.5"/>
                </StackPanel.Effect>
                <TextBlock Text="119"></TextBlock>
                <Label Content="Erl lorence Nievera" Margin="10,1,1,5" FontSize="25"></Label>
            </StackPanel>

            <Border Name="mask5" Background="#FFFFFF" Grid.Row="1" Grid.Column="1" CornerRadius="6,6,6,6" Opacity="1"/>
            <StackPanel Margin="5" Background="#FAF9F6" Grid.Row="1" Grid.Column="1">
                <StackPanel.OpacityMask>
                    <VisualBrush Visual="{Binding ElementName=mask5}"></VisualBrush>
                </StackPanel.OpacityMask>
                <StackPanel.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.5"/>
                </StackPanel.Effect>
                <TextBlock Text="1"></TextBlock>
                <Label FontSize="25" Margin="10,1,1,5" Content="Preparatory Department"></Label>
            </StackPanel>

            <Border Name="mask6" Background="#FFFFFF" Grid.Row="1" Grid.Column="2" CornerRadius="6,6,6,6" Opacity="1"/>
            <StackPanel Margin="5" Background="#FFEE1E24" Grid.Column="3" Grid.Row="1">
                <StackPanel.OpacityMask>
                    <VisualBrush Visual="{Binding ElementName=mask6}"></VisualBrush>
                </StackPanel.OpacityMask>
                <StackPanel.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.5"/>
                </StackPanel.Effect>
                <TextBlock Text="0" Foreground="White"></TextBlock>
                <Label Content="For Your Interview" Foreground="White"></Label>
            </StackPanel>

            <Border Name="mask8" Background="#FFFFFF" Grid.Row="2" CornerRadius="6,6,6,6" Opacity="1"/>
            <StackPanel Margin="5" Background="#FAF9F6" Grid.Row="2">
                <StackPanel.OpacityMask>
                    <VisualBrush Visual="{Binding ElementName=mask8}"></VisualBrush>
                </StackPanel.OpacityMask>
                <StackPanel.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.5"/>
                </StackPanel.Effect>
                <TextBlock Text="2"></TextBlock>
                <Label Content="New Applications" ></Label>
            </StackPanel>

            <Border Name="mask9" Background="#FFFFFF" Grid.Row="3" CornerRadius="6,6,6,6" Opacity="1"/>
            <StackPanel Background="#FAF9F6" Margin="5" Grid.Row="3">
                <StackPanel.OpacityMask>
                    <VisualBrush Visual="{Binding ElementName=mask9}"></VisualBrush>
                </StackPanel.OpacityMask>
                <StackPanel.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.5"/>
                </StackPanel.Effect>
                <TextBlock Text="17"></TextBlock>
                <Label Content="Completed Requirements"></Label>
            </StackPanel>

            <Border Name="mask4" Grid.Row="4" Background="#FFFFFF" CornerRadius="6,6,6,6" Opacity="1"></Border>
            <StackPanel Grid.Row="4" Background="#FAF9F6" Margin="5">
                <StackPanel.OpacityMask>
                    <VisualBrush Visual="{Binding ElementName=mask4}"></VisualBrush>
                </StackPanel.OpacityMask>
                <StackPanel.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.5"/>
                </StackPanel.Effect>
                <TextBlock Text="3"></TextBlock>
                <Label Content="Applicants Scheduled Today"></Label>
            </StackPanel>

            <Border Name="mask3" Background="#FFFFFF" Grid.Row="2" Grid.Column="1" CornerRadius="6,6,6,6" Opacity="1"/>
            <StackPanel Background="#FAF9F6" Margin="5" Grid.Row="5">
                <StackPanel.OpacityMask>
                    <VisualBrush Visual="{Binding ElementName=mask3}"/>
                </StackPanel.OpacityMask>
                <StackPanel.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.5"/>
                </StackPanel.Effect>
                <TextBlock Text="0"></TextBlock>
                <Label Content="No Show"></Label>
            </StackPanel>

            <Border Name="mask2" Background="#FFFFFF" Grid.Row="2" Grid.Column="1" CornerRadius="6,6,6,6" Opacity="1"/>
            <StackPanel Margin="5" Background="#FAF9F6" Grid.Row="2" Grid.Column="1">
                <StackPanel.OpacityMask>
                    <VisualBrush Visual="{Binding ElementName=mask2}"/>
                </StackPanel.OpacityMask>
                <StackPanel.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.5"/>
                </StackPanel.Effect>
                <TextBlock Text="7"></TextBlock>
                <Label Content="Basic Education"></Label>
            </StackPanel>

            <Border Name="mask1" Background="#FFFFFF" Grid.Row="3" Grid.Column="1" CornerRadius="6,6,6,6" Opacity="1"/>
            <StackPanel Grid.Row="3" Grid.Column="1" Margin="5" Background="#FAF9F6">
                <StackPanel.OpacityMask>
                    <VisualBrush Visual="{Binding ElementName=mask1}"/>
                </StackPanel.OpacityMask>
                <StackPanel.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.5"/>
                </StackPanel.Effect>
                <TextBlock Text="1"></TextBlock>
                <Label Content="Senior High School"></Label>
            </StackPanel>

            <Border Name="mask" Background="#FFFFFF" Grid.Row="4" Grid.Column="1" CornerRadius="6,6,6,6" Opacity="1"/>
            <StackPanel Grid.Row="4" Grid.Column="1" Margin="5" Background="#FAF9F6">
                <StackPanel.OpacityMask>
                    <VisualBrush Visual="{Binding ElementName=mask}"/>
                </StackPanel.OpacityMask>
                <StackPanel.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.5"/>
                </StackPanel.Effect>
                <TextBlock Text="0"></TextBlock>
                <Label Content="Higher Education"></Label>
            </StackPanel>

            <Grid.Background>
                <ImageBrush ImageSource="/uac_logo.png" Stretch="Uniform" Opacity="0.2" Viewport="0,0,1,1"></ImageBrush>
            </Grid.Background>
        </Grid>
    </DockPanel>
</Window>
