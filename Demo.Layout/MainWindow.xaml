<Window x:Class="Demo.Layout.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo.Layout"
        mc:Ignorable="d"
        Title="MainWindow" Height="834" Width="1280" WindowState="Maximized">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="2"></Setter>
            <Setter Property="HorizontalAlignment" Value="Left"></Setter>
            <Setter Property="Padding" Value="3"></Setter>
            <Setter Property="Background" Value="Transparent"></Setter>
            <Setter Property="BorderThickness" Value="0"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="FontSize" Value="10"></Setter>
            <Setter Property="Margin" Value="30,2,2,2"></Setter>
        </Style>
    </Window.Resources>
    <DockPanel>
        <Grid DockPanel.Dock="Left" Background="#FF343A3F">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Image Source="/uac_logo.png" Margin="5"></Image>
                <TextBlock Grid.Column="1" Foreground="White" Text="UAC Intergrated System" VerticalAlignment="Center"></TextBlock>
            </Grid>
            <Grid Grid.Row="1">
                <StackPanel Margin="10">
                    <Label Foreground="White" FontWeight="Bold" Content="Registrar Module"></Label>
                    <Button Content="Student"></Button>
                    <Button Content="Section"></Button>
                    <Button Content="Grades Encoding"></Button>
                    <Button Content="Subject"></Button>
                    <Button Content="Reports"></Button>
                    <Button Content="Maintainance"></Button>
                    <Button Content="Announcements"></Button>
                    <Button Content="Survey"></Button>
                </StackPanel>
            </Grid>
        </Grid>
        <Grid DockPanel.Dock="Top" Height="40" Background="#FFFFC107">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="40"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock></TextBlock>
            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="1" Text="Erl Nievera"></TextBlock>
            <Image  Margin="8" Source="/menu-burger.png" ></Image>
            <Image Margin="8" Grid.Column="2" Source="/settings.png"></Image>
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <TextBlock Margin="45,1,1,0" Text="Statistic 2026-20207" FontSize="25" VerticalAlignment="Center" FontWeight="Bold"></TextBlock>
            <Image  Margin="8" VerticalAlignment="Center" HorizontalAlignment="Left" Source="/trend.png"></Image>

            <TextBlock Grid.Column="1" Text="Last 3 Days Application" FontSize="25" VerticalAlignment="Center" Margin="45,0,0,0" FontWeight="Bold"></TextBlock>
            <Image Source="/CalendarIcon.png" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="8"></Image>

            <TextBlock Grid.Column="2" Text="For Your Interview" VerticalAlignment="Center" Margin="45,1,1,0" FontSize="25" FontWeight="Bold"></TextBlock>
            <Image Source="/PeopleIcon.png" Grid.Column="2" Margin="8" VerticalAlignment="Center" HorizontalAlignment="Left" ></Image>

            <StackPanel Margin="5" Background="#FAF9F6" Grid.Row="1">
                <StackPanel.Effect>
                    <DropShadowEffect/>
                </StackPanel.Effect>
                <TextBlock Text="119" Margin="10,50,1,5" FontWeight="Black" FontSize="30"></TextBlock>
                <TextBlock Text="Erl lorence Nievera" Margin="10,1,1,5" FontSize="20"></TextBlock>
            </StackPanel>

            <StackPanel Margin="5" Background="#FAF9F6" Grid.Row="1" Grid.Column="1">
                <StackPanel.Effect>
                    <DropShadowEffect/>
                </StackPanel.Effect>
                <TextBlock FontWeight="Black" FontSize="30" Margin="10,50,1,5" Text="1"></TextBlock>
                <TextBlock FontSize="20" Margin="10,1,1,5" Text="Preparatory Department"></TextBlock>
            </StackPanel>

            <StackPanel Margin="5" Background="#FFEE1E24" Grid.Column="3" Grid.Row="1">
                <StackPanel.Effect>
                    <DropShadowEffect Color="Black"/>
                </StackPanel.Effect>
                <TextBlock Margin="10,50,1,5"  Text="0" FontWeight="Black" FontSize="30" Foreground="White"></TextBlock>
                <TextBlock Margin="10,1,1,5" Text="For Your Interview" FontSize="20" Foreground="White"></TextBlock>
            </StackPanel>

            <StackPanel Margin="5" Background="#FAF9F6" Grid.Row="2">
                <StackPanel.Effect>
                    <DropShadowEffect Color="Black"/>
                </StackPanel.Effect>
                <TextBlock Margin="10,50,1,5" FontSize="30" FontWeight="Black" Text="2"></TextBlock>
                <TextBlock Margin="10,1,1,5" FontSize="20" Text="New Applications" ></TextBlock>
            </StackPanel>
            <StackPanel Background="#FAF9F6" Margin="5" Grid.Row="3">
                <StackPanel.Effect>
                    <DropShadowEffect Color="Black"/>
                </StackPanel.Effect>
                <TextBlock FontWeight="Black" FontSize="30" Margin="10,50,1,5" Text="17"></TextBlock>
                <TextBlock FontSize="20" Margin="10,1,1,5" Text="Completed Requirements"></TextBlock>
            </StackPanel>

            <StackPanel Grid.Row="4" Background="#FAF9F6" Margin="5">
                <StackPanel.Effect>
                    <DropShadowEffect Color="Black"/>
                </StackPanel.Effect>
                <TextBlock FontWeight="Black" FontSize="30" Margin="10,50,1,5" Text="3"></TextBlock>
                <TextBlock FontSize="20" Margin="10,1,1,5" Text="Applicants Scheduled Today"></TextBlock>
            </StackPanel>

            <StackPanel Background="#FAF9F6" Margin="5" Grid.Row="5">
                <StackPanel.Effect>
                    <DropShadowEffect Color="Black"/>
                </StackPanel.Effect>
                <TextBlock FontWeight="Black" FontSize="30" Margin="10,50,1,5" Text="0"></TextBlock>
                <TextBlock FontSize="20" Margin="10,1,1,5" Text="No Show"></TextBlock>
            </StackPanel>

            <StackPanel Margin="5" Background="#FAF9F6" Grid.Row="2" Grid.Column="1">
                <StackPanel.Effect>
                    <DropShadowEffect Color="Black" />
                </StackPanel.Effect>
                <TextBlock FontWeight="Black" FontSize="30" Margin="10,50,1,5" Text="7"></TextBlock>
                <TextBlock FontSize="20" Margin="10,1,1,5" Text="Basic Education"></TextBlock>
            </StackPanel>

            <StackPanel Grid.Row="3" Grid.Column="1" Margin="5" Background="#FAF9F6">

                <StackPanel.Effect>
                    <DropShadowEffect Color="Black"/>
                </StackPanel.Effect>
                <TextBlock FontSize="30" FontWeight="Black" Margin="10,50,1,5" Text="1"></TextBlock>
                <TextBlock FontSize="20" Margin="10,1,1,5" Text="Senior High School"></TextBlock>
            </StackPanel>

            <StackPanel Grid.Row="4" Grid.Column="1" Margin="5" Background="#FAF9F6">
                <StackPanel.Effect>
                    <DropShadowEffect Color="Black"/>
                </StackPanel.Effect>
                <TextBlock FontWeight="Black" FontSize="30" Margin="10,50,1,5" Text="0"></TextBlock>
                <TextBlock FontSize="20" Margin="10,1,1,5" Text="Higher Education"></TextBlock>
            </StackPanel>

            <Grid.Background>
                <ImageBrush ImageSource="/uac_logo.png" Stretch="Uniform" Opacity="0.2"></ImageBrush>
            </Grid.Background>
        </Grid>
    </DockPanel>
</Window>
